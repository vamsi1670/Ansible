server.modules += ( "mod_fastcgi" )
fastcgi.server    = ( ".php" =>
  ((
        "bin-path" => "/usr/bin/php-cgi",
        "socket" => "/tmp/php-cgi.socket." + var.PID,
        "max-procs" => 1,
        "idle-timeout" => 30,
        "bin-environment" => (
                "PHP_FCGI_CHILDREN" => "1",
                "PHP_FCGI_MAX_REQUESTS" => "50"
        ),
        "bin-copy-environment" => (
                "PATH",
                "SHELL",
                "USER"
        ),
        "broken-scriptfilename" => "enable"
  ))
)




